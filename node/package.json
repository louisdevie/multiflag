  "bugs": {
    "url": "https://github.com/louisdevie/multiflag/issues"
  },
  "homepage": "https://github.com/louisdevie/multiflag#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
