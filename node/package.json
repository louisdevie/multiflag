{
  "name": "multiflag",
  "version": "1.0.2",
  "description": "flag/bitflag helper",
  "main": "index.js",
  "scripts": {
    "build": "tsup",
    "postbuild": "cp package.json dist",
    "test": "jest",
    "type-check": "tsc --noEmit",
